@model UpdateEmployeeViewModel
@{
    ViewData["Title"] = $"Update: {Model.FirstName} {Model.LastName}";
}

<h1 class="text-primary mb-3">@ViewData["Title"]</h1>
<hr />

<div class="card shadow-sm p-4">
    <form asp-action="Update" method="post" novalidate>
        <input type="hidden" asp-for="EmployeeId" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="border rounded p-3 mb-4 bg-light">
            <h5 class="text-secondary mb-3">Address Details</h5>
            <div class="mb-3">
                <label asp-for="Address.Street" class="form-label">Street</label>
                <input asp-for="Address.Street" class="form-control" placeholder="e.g. 23 Alagomeji Road" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address.State" class="form-label">State</label>
                <select asp-for="Address.State" class="form-select" asp-items="Model.States">
                    <option value="">-- Select Nigerian State --</option>
                </select>
                <span asp-validation-for="Address.State" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Salary" class="form-label">Salary (₦)</label>
                <input asp-for="Salary" class="form-control" placeholder="e.g. 120000" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="HireDate" class="form-label">Hire Date</label>
                <input asp-for="HireDate" type="date" class="form-control" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Update Employee</button>
        </div>
    </form>
</div>
