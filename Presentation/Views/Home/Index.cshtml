@{
    ViewData["Title"] = "Home Page";
}

<div class="slideshow-container mb-5">
    <div class="overlay"></div>

    <div class="hero-text">
        <h1>Welcome to Ihsan Employee Manager</h1>
        <p>Your all-in-one platform for managing staff effectively and efficiently.</p>
        <a class="hero-brn" asp-controller="Employee" asp-action="Index">View Employees</a>
    </div>
</div>

<div class="row text-center mb-5">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h5 class="card-title text-primary">Departments</h5>
                <p class="card-text">Organize your employees by departments and assign roles with ease.</p>
                <a class="btn btn-outline-primary" asp-controller="Department" asp-action="Index">View Departments</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h5 class="card-title text-primary">Employees</h5>
                <p class="card-text">Add, update, and manage employees in a streamlined interface.</p>
                <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="Index">View Employees</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h5 class="card-title text-primary">Manage Access</h5>
                <p class="card-text">Your data is safe. Only authorized users can make changes to the system.</p>
                @if(User.Identity?.IsAuthenticated ?? false)
                {
                    <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">Login</a>
                }
            </div>
        </div>
    </div>
    <div class="text-center mt-4 p-4 bg-light rounded shadow-sm">
        <blockquote class="blockquote">
            <p class="mb-0">"The secret of my success is that we have gone to exceptional lengths to hire the best people." — Steve Jobs</p>
        </blockquote>
    </div>

</div>
