@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="text-success">✅ Password Reset Successful</h2>
        <p>Your password has been changed successfully. You can now log in using your new password.</p>
        @if(User.Identity!.IsAuthenticated)
        {
            <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">Go to Home</a>
        }
        else
        {
            <a class="btn btn-primary mt-3" asp-controller="Account" asp-action="Login">Go to Login</a>
        }
    </div>
</div>