@model Presentation.Models.UserVM.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
<hr />
<form asp-action="Login" asp-controller="Account" method="post">
    <div class="input-group mb-3">
        <label asp-for="Email" class="input-group text">Username</label>
        <input asp-for="Email" class="form-check-label" type="email" />
    </div>

    <div class="input-group mb-3">
        <label asp-for="Password" class="input-group text">Password</label>
        <input asp-for="Password" class="form-check-label" type="password"/>
    </div>

    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input"/>
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Login</button>
</form>