@model CreateDepartmentViewModel
@{
    ViewData["Title"] = "Create New Department";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <h2 class="text-primary mb-4">
                        <i class="bi bi-plus-circle me-2"></i> @ViewData["Title"]
                    </h2>
                    <hr />

                    <form asp-action="Create" method="post">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">Department Name</label>
                            <input asp-for="Name" class="form-control rounded-3 shadow-sm" placeholder="Enter department name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="4" placeholder="Enter department description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success px-4 py-2 shadow-sm">
                                <i class="bi bi-check-circle me-1"></i> Create Department
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
