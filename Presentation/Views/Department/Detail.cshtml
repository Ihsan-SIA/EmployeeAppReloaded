@model DepartmentViewModel
@{
    ViewData["Title"] = $"{Model.Name} details";
}

<h1>@ViewData["Title"]</h1>
<hr />

@if (Model.Employees is not null && Model.Employees.Any())
{
<table class="table table-primary">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
        </tr>
    </thead>

    <tbody>
        
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Description</td>
            <td>
                <a asp-action="Edit" class="btn btn-primary">Edit</a>
                <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-primary">Detail</a>
                <a asp-controller="Employee" asp-route-id="@Model.Id" asp-action="Create" class="btn btn-primary">Add Employee</a>
            </td>
        </tr>
    </tbody>
</table>
}